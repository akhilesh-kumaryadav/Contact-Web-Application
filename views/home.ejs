<html>
    <head>
        <title>
            <%= title%>
        </title>
        <script src="https://kit.fontawesome.com/f93c5f80de.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" type="text/css" href="/CSS/home.css">
    </head>
    <body>
        <h1 id="contact-heading">My Contacts List App</h1>

        <div id="contact-listing">
            <ul type="none">
                <% for(let i of contact_list) {%>
                    <li>
                        <p id="first-p"><%= i.name%></p>
                        <p id="second-p"><%= i.phone%></p>  
                        <!-- <a href="/delete-contact/<%= i.phone%>"> change the req.query to req.params-->
                        <a href="/delete-contact/?id=<%= i._id%>">
                            <i class="fa-solid fa-rectangle-xmark"></i> 
                        </a>
                    </li>
                <% } %>
            </ul>
        </div>

        <div id="form-div">
            <form action="create-contact" method="post">
                <input type="text" name="name" placeholder="Enter the name" required>
                <input type="number" name="phone" placeholder="Enter the Phone Number" required>
                <br>
                <button type="submit">Click Here To Submit</button>
            </form>
        </div>

        <script type="text/javascript" src="/Javascript/home.js"></script>
    </body>
</html>